# üîê Budget Buddy Mobile - Secure Backend Environment Template
# Copy this file to .env and fill in your actual secure values
# NEVER commit .env to version control!

# =============================================================================
# PRODUCTION SECURITY CONFIGURATION
# =============================================================================

# Environment mode (development/staging/production)
DEBUG=False
SECRET_KEY=REPLACE_WITH_STRONG_SECRET_KEY_32_CHARS_MINIMUM
DATABASE_URL=sqlite:///./budget_buddy_production.db

# JWT Security Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SECURE AI API KEYS (Server-side Only)
# =============================================================================

# Primary AI Service - Cohere (Recommended)
COHERE_API_KEY=REPLACE_WITH_YOUR_NEW_COHERE_API_KEY

# Alternative AI Services (Optional - for redundancy/advanced features)
GROK_API_KEY=REPLACE_WITH_YOUR_GROK_API_KEY_IF_USING
CLAUDE_API_KEY=REPLACE_WITH_YOUR_CLAUDE_API_KEY_IF_USING

# =============================================================================
# DATABASE & STORAGE SECURITY
# =============================================================================

# Database encryption key (REQUIRED for production)
DB_ENCRYPTION_KEY=REPLACE_WITH_32_CHAR_RANDOM_DATABASE_ENCRYPTION_KEY

# File upload security (if implementing receipt scanning)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# AI Service URLs (Default values - change if using custom endpoints)
COHERE_API_URL=https://api.cohere.ai/v1
GROK_API_URL=https://api.x.ai/v1
CLAUDE_API_URL=https://api.anthropic.com/v1

# =============================================================================
# NETWORK & SECURITY CONFIGURATION
# =============================================================================

# CORS Settings (Mobile app URLs)
ALLOWED_ORIGINS=http://localhost:3000,exp://192.168.1.100:8081,https://your-mobile-app-domain.com

# Rate Limiting (Requests per minute per user)
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AI_PER_HOUR=100

# Security Headers
ENABLE_SECURITY_HEADERS=True
SESSION_TIMEOUT_MINUTES=120

# =============================================================================
# BUSINESS CONFIGURATION
# =============================================================================

# Tier Limits (Adjust based on business model)
BRONZE_AI_REQUESTS_PER_DAY=10
SILVER_AI_REQUESTS_PER_DAY=50
GOLD_AI_REQUESTS_PER_DAY=200

BRONZE_INSIGHTS_PER_MONTH=2
SILVER_INSIGHTS_PER_MONTH=10
GOLD_INSIGHTS_PER_MONTH=50

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/budget_buddy_backend.log
ENABLE_API_LOGGING=True

# Performance monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT CONFIGURATION (Override in production)
# =============================================================================

# Server configuration
HOST=0.0.0.0
PORT=8000

# Development debugging
ENABLE_DEBUG_ENDPOINTS=False
ENABLE_API_DOCS=True

# =============================================================================
# SECURITY NOTES FOR PRODUCTION
# =============================================================================
# 
# üõ°Ô∏è PRODUCTION SECURITY CHECKLIST:
# 
# 1. SECRET_KEY: Generate with: openssl rand -base64 32
# 2. DB_ENCRYPTION_KEY: Generate with: openssl rand -base64 32  
# 3. API Keys: Use fresh keys, never exposed ones
# 4. DEBUG: Always set to False in production
# 5. ALLOWED_ORIGINS: Only include your actual domains
# 6. DATABASE_URL: Use PostgreSQL for production scale
# 7. HTTPS: Always use SSL certificates in production
# 8. Rate Limits: Adjust based on your business model
# 9. Monitoring: Enable logging and metrics
# 10. Backups: Implement regular database backups
# 
# =============================================================================