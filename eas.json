{
  "cli": {
    "version": ">= 16.18.1",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "preview": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      },
      "ios": {
        "simulator": true
      },
      "env": {
        "NODE_ENV": "production",
        "EXPO_NO_CAPABILITY_SYNC": "1",
        "EXPO_PUBLIC_BACKEND_URL": "https://budget-buddy-mobile.onrender.com",
        "EXPO_PUBLIC_API_MODE": "backend",
        "EXPO_PUBLIC_USE_BACKEND_AUTH": "true",
        "EXPO_PUBLIC_USE_BACKEND_AI": "true",
        "EXPO_PUBLIC_ENABLE_FALLBACK": "true",
        "EXPO_PUBLIC_BACKEND_TIMEOUT": "10000",
        "EXPO_PUBLIC_HEALTH_CHECK_INTERVAL": "30000"
      }
    },
    "production": {
      "autoIncrement": true,
      "android": {
        "gradleCommand": ":app:bundleRelease",
        "buildType": "app-bundle"
      },
      "ios": {
        "simulator": false
      },
      "env": {
        "NODE_ENV": "production",
        "EXPO_NO_CAPABILITY_SYNC": "1",
        "COHERE_API_KEY": "REPLACE_WITH_YOUR_ACTUAL_COHERE_API_KEY",
        "EXPO_PUBLIC_SUPABASE_URL": "REPLACE_WITH_YOUR_SUPABASE_URL",
        "EXPO_PUBLIC_SUPABASE_ANON_KEY": "REPLACE_WITH_YOUR_SUPABASE_ANON_KEY"
      }
    },
    "production-apk": {
      "extends": "production",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk"
      }
    },
    "testing": {
      "distribution": "internal",
      "android": {
        "gradleCommand": ":app:assembleRelease",
        "buildType": "apk",
        "versionCode": "auto"
      },
      "env": {
        "NODE_ENV": "production",
        "EXPO_NO_CAPABILITY_SYNC": "1",
        "EXPO_PUBLIC_BACKEND_URL": "https://budget-buddy-mobile.onrender.com",
        "EXPO_PUBLIC_API_MODE": "backend",
        "EXPO_PUBLIC_USE_BACKEND_AUTH": "true",
        "EXPO_PUBLIC_USE_BACKEND_AI": "true",
        "EXPO_PUBLIC_ENABLE_FALLBACK": "true",
        "EXPO_PUBLIC_BACKEND_TIMEOUT": "10000",
        "EXPO_PUBLIC_HEALTH_CHECK_INTERVAL": "30000"
      }
    }
  },
  "submit": {
    "production": {
      "android": {
        "serviceAccountKeyPath": "./google-play-service-account.json",
        "track": "internal"
      },
      "ios": {
        "appleId": "your-apple-id@email.com",
        "ascAppId": "123456789",
        "appleTeamId": "ABCD123456"
      }
    }
  }
}
